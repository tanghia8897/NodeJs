
<!DOCTYPE html>
<html lang="en">
<head>
    <% include layout/head %>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <% include layout/nav %>   
        <div class="row pb-sm-3">
            <div class="col-sm-12">
                <a href="/admin/post/new" class="btn btn-success pull-right">Add New Post</a>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                Posts
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Author</th>
                                <th>Created Time</th>
                                <th>Updated Time</th>
                                <th>Action</th>   
                            </tr>
                        </thead>
                        <tbody>
                            <% if(data && data.posts){%>
                                <% for(var i = 0; i < data.posts.length; i++){%>
                                    <tr>
                                        <td><%= data.posts[i].id %></td>
                                        <td><%= data.posts[i].title %></td>
                                        <td><%= data.posts[i].content %></td>
                                        <td><%= data.posts[i].author %></td>
                                        <td><%= data.posts[i].created_at %></td>
                                        <td><%= data.posts[i].updated_at %></td>
                                        <td>
                                            <a href="admin/post/edit/<%= data.posts[i].id %>" class="btn btn-primary">Edit</a>
                                            <a href="" class="btn btn-danger">Dlete</a>
                                        </td>
                                    </tr>
                                <%}%>
                         <%}%>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</body>
</html>

