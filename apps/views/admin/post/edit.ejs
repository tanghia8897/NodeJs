<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../layout/head %>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
   <script>tinymce.init({ selector:'textarea' });</script>   <!-- https://www.tinymce.com/ -->
    <title>Document</title>
</head>
<body>
    <div class="container">
        <% include ../layout/nav %>
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Edit post
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                    <% if(data && data.error) {%>  
                                        <div id="login-alert" class="alert alert-danger col-sm-12">
                                            <%= data.error %>
                                        </div>
                                        <%}%>
                                <form role="form" method="" action="">
                                    <input class="id" type="hidden" name="id" value="<% if(data && data.post){%><%= data.post.id %><%}%> " >
                                    <div class="form-group">
                                        <label>Title</label>
                                        <input class="form-control title" name="title" placeholder="title" value="<% if(data && data.post){%><%= data.post.title%><%}%>" >   
                                    </div>
                                    <div class="form-group">
                                        <label>Content</label>
                                       <textarea placeholder="Content" class="form-control" name="content" cols="30" rows="10"><% if(data && data.post){%><%= data.post.content%><%}%> </textarea> 
                                    </div>
                                    <div class="form-group">
                                        <label>Author</label>
                                        <input class="form-control author" name="author" placeholder="Author" value="<% if(data && data.post){%><%= data.post.author%><%}%>" >   
                                    </div>
                                   <input type="submit" value="Edit" class="btn btn-success post_edit">
                                </form>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <script type="text/javascript" src="/static/js/post.js"> </script>
</body>
</html>
